<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="07-12-2020_15:37" author="ibrahim.koc">
        <createTable tableName="Product">
            <column autoIncrement="true" name="id" type="int(10)">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="price" type="VARCHAR(255)"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="url_To_Image" type="VARCHAR(255)"/>
            <column name="media_id" type="int(10)">
                <constraints nullable="true" foreignKeyName="media_id_p" references="media(id)"></constraints>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="Product"/>
        </rollback>

    </changeSet>
    <changeSet author="22-12-2020_13:44" id="ibrahim.koc">
        <addColumn tableName="Product" >
            <column name="deleted"
                    defaultValue="false"
                    type="BOOLEAN"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>