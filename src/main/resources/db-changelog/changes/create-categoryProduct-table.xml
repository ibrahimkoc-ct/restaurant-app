<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="09-12-2020_11:20" author="ibrahim.koc">
        <createTable tableName="TBL_CATEGORY_PRODUCT">
            <column name="Category_id" type="int(10)">
                <constraints foreignKeyName="category_id" references="category(id)" primaryKey="true" nullable="false"/>
            </column>
            <column name="Product_id" type="int(10)">
                <constraints primaryKey="true" nullable="false" foreignKeyName="product_id" references="product(id)"/>
            </column>
    </createTable>
        <rollback>
            <dropTable tableName="TBL_CATEGORY_PRODUCT"/>
        </rollback>
    </changeSet>
</databaseChangeLog>